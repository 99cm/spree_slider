<h1><%= t('spree.slide') %></h1>

<table class="table">
  <tr data-hook="product_id">
    <th><%= t('spree.product') %></th>
    <td>
      <%= @slide.product.name unless @slide.product_id.blank? %>
    </td>
  </tr>
  <tr data-hook="name">
    <th><%= t('spree.name') %></th>
    <td>
      <%= @slide.name %>
    </td>
  </tr>
  <tr data-hook="body">
    <th><%= t('spree.body') %></th>
    <td>
      <%= @slide.body %>
    </td>
  </tr>
  <tr data-hook="link_url">
    <th><%= t('spree.link_url') %></th>
    <td>
      <%= @slide.link_url %>
    </td>
  </tr>
  <tr data-hook="published">
    <th><%= t('spree.published') %></th>
    <td>
      <%= @slide.published ? t('spree.y') : t('spree.n') %>
    </td>
  </tr>
  <tr data-hook="image_file_name">
    <th><%= t('spree.image_file_name') %></th>
    <td>
      <%= @slide.image_file_name %>
    </td>
  </tr>
  <tr data-hook="position">
    <th><%= t('spree.position') %></th>
    <td>
      <%= @slide.position %>
    </td>
  </tr>
</table>

<p>
  <%= link_to_edit @slide, class: 'edit_slide' %> <%= t('spree.or') %>
  <%= link_to t('spree.back'), collection_url %>
</p>
